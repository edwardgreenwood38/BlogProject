@using BlogProject.Services
@using BlogProject.Models
@using X.PagedList
@using X.PagedList.Mvc.Core
@using X.PagedList.Web.Common

@inject IImageService imageService
@model IPagedList<Post>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @*@Html.DisplayNameFor(model => model.Title)*@
                Image
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.Title)*@
                Title
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.Abstract)*@
                Abstract
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var post in Model)
        {
            <tr>
                <td>
                    <img src="@imageService.DecodeImage(post.ImageData, post.ContentType)" width="200" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => post.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => post.Abstract)
                </td>

                <td>
                    <a asp-action="Edit" asp-route-slug="@post.Slug">Edit</a> |
                    <a asp-action="Details" asp-route-slug="@post.Slug">Details</a> |
                    <a asp-action="Delete" asp-route-slug="@post.Slug">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<hr />

<!--  page navigation  -->
<div class="row">
    <div class="col h3">
        Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
    </div>
</div>

<div class="row">
    <div class="col">
        @Html.PagedListPager(Model, page => Url.Action("BlogPostIndex", new { id = Model.FirstOrDefault().BlogId, page = page }),
       new PagedListRenderOptions
       {
           LiElementClasses = new string[] { "page-item" },
           PageClasses = new string[] { "page-link" }
       })
    </div>
</div>